    "@codemirror/view": "^6.0.0",
    "@release-it/bumper": "^3.0.1",
    "@release-it/conventional-changelog": "^4.1.0",
    "@types/codemirror": "^5.60.5",
    "@types/node": "^16.0.0",
    "conventional-changelog-angular": "^5.0.13",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.15.10",
    "eslint": "^8.25.0",
    "jszip": "^3.10.1",
